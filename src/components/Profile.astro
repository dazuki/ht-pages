---
import { Image } from 'astro:assets'
import Social from './Social.astro'
import UserProfileImage from '../assets/profilbild.jpg'

interface Social {
	icon: string
	url: string
	alt: string
}

interface Props {
	name: string
	profession: string
	socials: Social[]
}

const { name, profession, socials } = Astro.props
---

<header class="profile">
	<div class="profile-picture-content">
		<figure class="profile-picture">
			<Image src={UserProfileImage} alt="This is me!" width={112} height={112} loading="eager" />
		</figure>
	</div>
	<div class="profile-data">
		<h1 class="profile-name">{name}</h1>
		<p class="profile-profession">{profession}</p>
	</div>
	<div class="profile-links">
		{socials.map((item) => <Social icon={item.icon} url={item.url} alt={item.alt} />)}
	</div>
</header>

<style>
	.profile {
		margin-top: 8rem;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
		z-index: 1;
		animation: fadeInUp var(--transition-slow) ease-out;
	}

	.profile-picture-content {
		position: relative;
		padding: 3px;
		border-radius: 50%;
		background: linear-gradient(135deg, var(--white) 0%, var(--gray-600) 100%);
		transition: transform var(--transition-base);
	}

	.profile-picture-content:hover {
		transform: scale(1.02);
	}

	.profile-picture {
		width: 7rem;
		height: 7rem;
		border-radius: 50%;
		overflow: hidden;
		border: 2px solid var(--black);
		background: var(--black);
	}

	.profile-picture img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		display: block;
	}

	.profile-data {
		margin-top: 1.75rem;
		text-align: center;
		animation: fadeInUp var(--transition-slow) ease-out 100ms;
	}

	.profile-name {
		font-family: var(--font-sans);
		font-size: 1.5rem;
		font-weight: 700;
		letter-spacing: -0.02em;
		color: var(--white);
		margin-bottom: 0.5rem;
	}

	.profile-profession {
		font-size: 0.75rem;
		font-weight: 400;
		letter-spacing: 0.1em;
		color: var(--gray-400);
		text-transform: uppercase;
	}

	.profile-links {
		margin-top: 2rem;
		display: flex;
		gap: 0.75rem;
		justify-items: center;
		animation: fadeInUp var(--transition-slow) ease-out 200ms;
	}
</style>
